{% extends 'base.html.twig' %}

{% block title %}Post!{% endblock %}
{% block nav %}
{{ parent() }}
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
  
{{ "now"|date('d/m/Y H:i', timezone="America/Bogota") }}

{# {% if posts == 0  %}

{% endif %} #}

    <table id="#" border="solid 1px" style="background-color:black; color:white; border-radius:10px">
        <thead>
            {%  for  post in posts %}
        <tr>
            <th>{{post.titulo}}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td width="700px" >{{post.contenido}}</td>
        </tr>
        <td>Comentarios </td>
        <form action="{{path('comentarios')}}" method="POST" >
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Commentario  {{post.titulo}}</label>
                <textarea name="contenido" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Comentarios"></textarea>
            </div>
            <input type="text" name="usuario" class="form-control" id="exampleFormControlInput1" >
            <input type="text" name="post" class="form-control" id="exampleFormControlInput1" >
            <button type="submit" class="btn btn-primary">Publicar</button>
        </form> 
        {% endfor %}
    </tbody>
    </table>




</div>
{% endblock %}
