{% extends 'base.html.twig' %}

{% block title %}
Publicar Post
{% endblock %}

{% block body %}

	<h1>Publicar Post</h1>
    <form action="{{path('creacion_post')}}" method="POST" >
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Titulo del Post</label>
            <input type="text" name="titulo" class="form-control" id="exampleFormControlInput1" >
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Contenido del Post</label>
            <textarea name="contenido" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <input type="text" name="usuario" class="form-control" id="exampleFormControlInput1" >

        <button type="submit" class="btn btn-primary">Publicar</button>
    </form> 
    {# {{form(formulario)}}
